---
const links = [
    { url: "/oslo", name: "Oslo" },
    { url: "/agder", name: "Agder" },
    { url: "/rogaland", name: "Rogaland" },
    { url: "/buskerud", name: "Buskerud" },
    { url: "/vestland", name: "Vestland" },
    { url: "/akershus", name: "Akershus" },
    { url: "/telemark", name: "Telemark" },
    { url: "/trondelag", name: "Trøndelag" },
    { url: "/svalbard", name: "Svalbard" },
    { url: "/troms", name: "Troms" },
    { url: "/ostfold", name: "Østfold" },
    { url: "/finnmark", name: "Finnmark" },
    { url: "/nordland", name: "Nordland" },
    { url: "/flyplasser", name: "Flyplasser" },
];
---

<h3 class="font-semibold py-2">Velg sted:</h3>
<nav class="m-auto max-w-xl">
    <ul class="flex gap-2 font-semibold flex-wrap">
        {
            links.map(({ url, name }) => (
                <li class="hover:bg-violet-300 bg-amber-200 rounded-md p-1">
                    <a href={url}>{name}</a>
                </li>
            ))
        }
    </ul>
</nav>
